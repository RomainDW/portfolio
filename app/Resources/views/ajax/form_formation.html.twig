<div style="margin: 20px;">
    {% if form is defined %}
    {{ form_start(form, {'attr':{'data-filter' : 'formation', 'class' : 'formation cv-add'}}) }}
    {{ form_row(form.niv) }}
    {{ form_row(form.name) }}
    {{ form_row(form.school) }}
    {{ form_row(form.date) }}
    {% endif %}

    {% if edit_form is defined %}
    {{ form_start(edit_form, {'attr':{'data-filter' : 'formation', 'class' : 'formation cv-edit', 'id-entity' : id}}) }}
    {{ form_row(edit_form.niv) }}
    {{ form_row(edit_form.name) }}
    {{ form_row(edit_form.school) }}
    {{ form_row(edit_form.date) }}
    {% endif %}

    <div class="row">
        <div class="col-md-3">
            {% if form is defined %}
            {{ form_row(form.send) }}
            {{ form_end(form) }}
            {% endif %}

            {% if edit_form is defined %}
            {{ form_row(edit_form.send, {'label' : 'Modifier'}) }}
            {{ form_end(edit_form) }}
            {% endif %}
        </div>
        <div class="col-md-3 offset-md-6 text-right">
            {% if cancel is defined %}
            {{ form_start(cancel, {'attr':{'data-filter' : 'filter_formation'}}) }}
            {{ form_row(cancel.cancel, {'attr':{'data-filter' : 'formation', 'class' : 'form_cancel btn-secondary'}}) }}
            {{ form_end(cancel) }}
            {% endif %}

            {% if edit_cancel is defined %}
            {{ form_start(edit_cancel, {'attr':{'data-filter' : 'filter_formation'}}) }}
            {{ form_row(edit_cancel.cancel, {'attr':{'data-filter' : 'formation', 'class' : 'form_edit_cancel btn-secondary', 'id-entity' : id}}) }}
            {{ form_end(edit_cancel) }}
            {% endif %}
        </div>
    </div>

</div>



<div class="card-header">
    <i class="fa fa-table"></i> Tableau des Formation</div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
            <tr>
                <th>Nom de la formation</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for formation in entities  %}
                <tr>
                    <td>{{ formation.name }}</td>
                    <td>
                        <button name="formation" data-filter="{{ formation.id }}" class="btn btn-primary edit-info"><i class="fa fa-pencil"></i> Editer</button>
                        <a href="{{ path('Delete formation', {id : formation.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i> Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<div class="card-btn col-md-3">
    <button class="btn btn-success formation add-info" data-filter="formation"><i class="fa fa-plus"></i> Ajouter</button>
</div>


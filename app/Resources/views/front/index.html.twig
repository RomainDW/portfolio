{% extends 'base.html.twig' %}


{% block stylesheets %}
<link href="{{ asset('css/my-style.css') }}" rel="stylesheet" type="text/css">
<link href="{{ asset('css/portfolio.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}

    {#Navbar#}

    {{ include(':inc:navbar.html.twig') }}



    {#Header#}

    <header class="masthead text-center text-white d-flex">
        <div class="container my-auto sr-container">
            <div class="row">
                <div class="col-lg-10 mx-auto">
                    <h1 class="text-uppercase">
                        <strong>Bienvenue, je suis Romain Ollier et ce site est mon portfolio</strong>
                    </h1>
                    <hr>
                </div>
                <div class="col-lg-8 mx-auto">
                    <p class="text-faded mb-5">Vous retrouverez ici mes projets réalisés ainsi que mon cv et un formulaire de contact.</p>
                    <a class="btn btn-primary btn-xl js-scroll-trigger" href="#about">En savoir plus</a>
                </div>
            </div>
        </div>
    </header>



    {#About#}

    <section class="bg-primary" id="about">
        <div class="container sr-container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="section-heading text-white">A propos</h2>
                    <hr class="light my-4">
                    <p class="text-faded mb-4">
                        {% for about in abouts %}
                        {{ about.resume }}
                        {% endfor %}
                    </p>
                    <a class="btn btn-light btn-xl js-scroll-trigger" href="#portfolio">Voir les projets</a>
                </div>
            </div>
        </div>
    </section>



    {#Portfolio#}

    <section class="bg-dark" id="portfolio">
        <div class="container sr-container">
            <div class="row ">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-white">Quelques projets réalisés</h2>
                    <hr class="my-4">
                </div>
                <div class="col-lg-6 mx-auto">
                    <nav>
                        <ul>
                            <li class="filter-button active-category first text-center" data-filter="all">Tout</li>
                            <li class="filter-button text-center" data-filter="php">PHP</li>
                            <li class="filter-button text-center" data-filter="javascript">Javascript</li>
                            <li class="filter-button text-center" data-filter="symfony">Symfony</li>
                            <li class="filter-button last text-center" data-filter="wordpress">Wordpress</li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="row justify-content-center">

                {% for project in projects %}
                <div class="projets_album col-md-6 col-sm-12 portfolio-item filter {{ project.categories | lower }}">
                    <a class="portfolio-link" data-toggle="modal" href="#portfolioModal{{ project.id }}">
                        <div class="portfolio-hover">
                            <div class="portfolio-hover-content d-flex align-items-center justify-content-center">
                                <i class="fa fa-plus fa-3x"></i>
                            </div>
                        </div>
                        <figure>
                            <img class="img-fluid" src="{{ asset('img/portfolio/thumbnail/' ~ project.image) }}" alt="{{ project.name }}" />
                            <figcaption>
                                <h3>{{ project.name }}</h3>
                                <p>{{ project.categories }}</p>
                            </figcaption>
                        </figure>
                    </a>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>



    {#Portfolio Modals#}

    <!-- Modal -->
    {% for project in projects %}
    <div class="portfolio-modal modal fade" id="portfolioModal{{ project.id }}" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="close-modal" data-dismiss="modal">
                    <div class="lr">
                        <div class="rl"></div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <div class="modal-body">
                                <!-- Project Details Go Here -->
                                <h2 class="text-uppercase">{{ project.name }}</h2>
                                <p class="item-intro text-muted">Lorem ipsum dolor sit amet consectetur.</p>
                                <img class="img-fluid d-block mx-auto" src="{{ asset('img/portfolio/full/01-full.jpg') }}" alt="">
                                <p>{{ project.resume }}</p>
                                <ul class="list-inline">
                                    <li>Date: {{ project.createdDate | date('d/m/Y') }}</li>
                                    <li>Catégorie(s): {{ project.categories }}</li>
                                    <li><a href="{{ project.link }}" target="_blank">Lien vers le site</a></li>
                                </ul>
                                <button class="btn btn-primary" data-dismiss="modal" type="button">
                                    <i class="fa fa-times"></i>
                                    Fermer le projet</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}


    {#CV#}

    <section class="bg-primary text-white" id="CV">
        <div class="container text-center sr-container">
            <h2 class="mb-4">Plus d'informations sur mes compétences et mon parcours ?</h2>
            <a class="btn btn-light btn-xl sr-button" href="{{ path('Mon CV') }}" target="_blank">Voir mon cv !</a>
        </div>
    </section>



    {#Contact#}

    <section id="contact" class="bg-dark">
        <div class="container sr-container">
            <div class="row">
                <div class="col-md-8 mx-auto text-center text-white">
                    <h2 class="section-heading">Envie de me contacter ?</h2>
                    <hr class="my-4">
                    <p class="mb-5">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                </div>
                <div class="col-md-8 mx-auto text-center">
                    {% for type, flashes in app.session.flashbag.all %}
                        {% for flash in flashes %}
                            <div class="alert alert-{{ type }} fade-in">
                                {{ flash }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    {{ form(contact_form) }}
                </div>
            </div>
        </div>
    </section>



    {#Footer#}
    <footer id="lab_social_icon_footer" class="bg-dark">
        <div class="container">
            <div class="text-center center-block">
                <a href="https://www.facebook.com/#" target="_blank"><i id="social-fb" class="fab fa-facebook-square fa-3x social"></i></a>
                <a href="https://twitter.com/#" target="_blank"><i id="social-tw" class="fab fa-twitter-square fa-3x social"></i></a>
                <a href="https://plus.google.com/#" target="_blank"><i id="social-gp" class="fab fa-google-plus-square fa-3x social"></i></a>
            </div>
        </div>
    </footer>


{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/portfolio.js') }}"></script>
    <script src="{{ asset('js/filter.js') }}"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
{% endblock %}


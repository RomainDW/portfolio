{% extends 'layout_admin.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('Dashboard') }}">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Projets</li>
            <li class="breadcrumb-item active">Modifier des catégories</li>
        </ol>

        {% for message in app.flashes('notice') %}
            <div class="flash-notice alert alert-success" role="alert">
                <strong>{{ message }}</strong>
            </div>
        {% endfor %}

        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-table"></i> Tableau des catégories</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Nom de la catégorie</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for category in categories  %}
                            <tr>
                                <td>{{ category.name }}</td>
                                <td>
                                    <a href="{{ path('Edit category', {id : category.id}) }}" class="btn btn-primary"><i class="fa fa-pencil"></i> Editer</a>
                                    <a href="{{ path('Delete category', {id : category.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i> Supprimer</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-btn col-md-3">
                <a class="btn btn-success" href="{{ path('Add category') }}"><i class="fa fa-plus"></i> Ajouter</a>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/admin/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('js/admin/dataTables.bootstrap4.js') }}"></script>
    <script src="{{ asset('js/admin/sb-admin-datatables.js') }}"></script>
    {{ parent() }}
{% endblock %}
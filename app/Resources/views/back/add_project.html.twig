{% extends 'layout_admin.html.twig' %}

{% block content %}
<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('Dashboard') }}">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Projets</li>
        <li class="breadcrumb-item active">Ajouter un projet</li>
    </ol>
    <div class="row">
        <div class="col-md-6">

            {% for message in app.flashes('notice') %}
                <div class="flash-notice alert alert-success" role="alert">
                    <strong>{{ message }}</strong>
                </div>
            {% endfor %}

            {{ form_start(project_form) }}
            {{ form_row(project_form.name) }}
            <div id="categories">
                {{ form_row(project_form.category) }}
            </div>
            {{ form_row(project_form.createdDate) }}
            {{ form_row(project_form.file) }}
            {{ form_row(project_form.resume) }}
            {{ form_row(project_form.link) }}
            {{ form_row(project_form.send) }}
            {{ form_end(project_form) }}
        </div>
        <div class="col-md-6">
            <div id="divCategory">
                <button class="btn btn-success" id="addCategory" style="margin-top: 31.5px;">Ajouter une cat√©gorie</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/admin/add-category-ajax.js') }}"></script>
{% endblock %}


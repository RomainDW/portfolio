{% extends 'layout_admin.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('Dashboard') }}">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">CV</li>
            <li class="breadcrumb-item active">Editer le CV</li>
        </ol>
        <div class="row">

            <div class="col-md-6">

                <div class="card mb-3" id="formation">
                    <div class="card-header">
                        <i class="fa fa-table"></i> Tableau des Formation</div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>Nom de la formation</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for formation in formations  %}
                                    <tr>
                                        <td>{{ formation.name }}</td>
                                        <td>
                                            <button name="formation" data-filter="{{ formation.id }}" id="edit-info" class="btn btn-primary edit-info"><i class="fa fa-pencil"></i> Editer</button>
                                            <a href="{{ path('Delete formation', {id : formation.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i> Supprimer</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-btn col-md-3">
                        <button class="btn btn-success add-info" data-filter="formation"><i class="fa fa-plus"></i> Ajouter</button>
                    </div>
                </div>

                <div class="card mb-3" id="language">
                    <div class="card-header">
                        <i class="fa fa-table"></i> Tableau des Langues</div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>Nom de la langue</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for language in languages  %}
                                    <tr>
                                        <td>{{ language.name }}</td>
                                        <td>
                                            <button name="language" data-filter="{{ language.id }}" class="btn btn-primary edit-info"><i class="fa fa-pencil"></i> Editer</button>
                                            <a href="{{ path('Delete language', {id : language.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i> Supprimer</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-btn col-md-3">
                        <button class="btn btn-success add-info" data-filter="language"><i class="fa fa-plus"></i> Ajouter</button>
                    </div>
                </div>

                <div class="card mb-3" id="hobbie">
                    <div class="card-header">
                        <i class="fa fa-table"></i> Tableau des Hobbies</div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>Nom du Hobbie</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for hobbie in hobbies  %}
                                    <tr>
                                        <td>{{ hobbie.name }}</td>
                                        <td>
                                            <button name="hobbie" data-filter="{{ hobbie.id }}" class="btn btn-primary edit-info"><i class="fa fa-pencil"></i> Editer</button>
                                            <a href="{{ path('Delete hobbie', {id : hobbie.id}) }}" class="btn btn-danger edit-info"><i class="fa fa-trash"></i> Supprimer</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-btn col-md-3">
                        <button class="btn btn-success add-info" data-filter="hobbie"><i class="fa fa-plus"></i> Ajouter</button>
                    </div>
                </div>

                <div class="card mb-3" id="experience">
                    <div class="card-header">
                        <i class="fa fa-table"></i> Tableau des Expériences</div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>Nom de l'expérience</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for experience in experiences  %}
                                    <tr>
                                        <td>{{ experience.name }}</td>
                                        <td>
                                            <button name="experience" data-filter="{{ experience.id }}" class="btn btn-primary edit-info"><i class="fa fa-pencil"></i> Editer</button>
                                            <a href="{{ path('Delete experience', {id : experience.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i> Supprimer</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-btn col-md-3">
                        <button class="btn btn-success add-info" data-filter="experience"><i class="fa fa-plus"></i> Ajouter</button>
                    </div>
                </div>

            </div><!-- end -->

            <div class="col-md-6">

                {% for message in app.flashes('notice') %}
                    <div class="flash-notice alert alert-success" role="alert">
                        <strong>{{ message }}</strong>
                    </div>
                {% endfor %}

                {{ form(cv_form) }}

            </div>
            <div class="col-md-12">

                <div class="card mb-3" id="skill">
                    <div class="card-header">
                        <i class="fa fa-table"></i> Tableau des Compétences</div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>Nom de la compétence</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for skill in skills  %}
                                    <tr>
                                        <td>{{ skill.name }}</td>
                                        <td>
                                            <button name="skill" data-filter="{{ skill.id }}" class="btn btn-primary edit-info"><i class="fa fa-pencil"></i> Editer</button>
                                            <a href="{{ path('Delete skill', {id : skill.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i> Supprimer</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-btn col-md-3">
                        <button class="btn btn-success add-info" data-filter="skill"><i class="fa fa-plus"></i> Ajouter</button>
                    </div>
                </div>

                <div class="card mb-3" id="cv-project">
                    <div class="card-header">
                        <i class="fa fa-table"></i> Tableau des Projets</div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>Nom du projet</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for project in projects  %}
                                    <tr>
                                        <td>{{ project.name }}</td>
                                        <td>
                                            <button name="cv-project" data-filter="{{ project.id }}" class="btn btn-primary edit-info"><i class="fa fa-pencil"></i> Editer</button>
                                            <a href="{{ path('Delete CV project', {id : project.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i> Supprimer</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-btn col-md-3">
                        <button class="btn btn-success add-info" data-filter="cv-project"><i class="fa fa-plus"></i> Ajouter</button>
                    </div>
                </div>

            </div>

        </div>

    </div>
{% endblock %}